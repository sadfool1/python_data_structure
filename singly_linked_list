#add store data into lists

class Node: 
    def __init__(self, data):
        self.data = data
        self.next = None
        
class LinkedList:
    def __init__(self):
        self.head = None 
        self.size = 0
    
    def addNodeEnd(self,data):
        newNode = Node(data)
        newNode.next = None
        if self.head==None:
            self.head=newNode
        else:
            last=self.head
            while last.next:
                last=last.next
            last.next=newNode
        self.size+=1
    
    def removeNode(self, value):
        prev = None 
        curr = self.head 
        while curr:
            if curr.data == value:
                if prev:  # it is true if curr is not the first node 
                    prev.next = curr.next 
                    prev = curr
                    curr = curr.next 
                else:     # the following is executed if curr is the first node 
                    self.head = curr.next
                    curr = curr.next 
                self.size -= 1 
            else:
                prev = curr
                curr = curr.next 
              
    def printNode(self):
        curr = self.head
        while curr:
            print(curr.data)
            curr = curr.next 

mylist=[3,3,1,3,4,5,8,3,5,7,3] #test data
mylinkedlist=LinkedList()
''' test values'''
for x in mylist:
    mylinkedlist.addNodeEnd(x)
mylinkedlist.printNode()

mylinkedlist.removeNode(3)
print("After Removeing the value 3, the linked list becomes:")
mylinkedlist.printNode()
